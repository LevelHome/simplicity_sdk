id: power_manager_core_impl_sleep_loop
label: "Power Manager: Core implementation"
package: platform
description: Power Manager core Sleep Loop's implementation.
category: Services|Power Manager
quality: production
metadata:
  sbom:
    license: Zlib
ui_hints:
  visibility: never
root_path: platform/service/power_manager/src/sleep_loop
source:
  - path: sl_power_manager.c
  - path: sl_power_manager_debug.c
  - path: sl_power_manager_hal_s2.c
    condition: [device_series_2]
  - path: sl_power_manager_hal_sixg301.c
    condition: [device_generic_family_sixx301]
  - path: sli_power_manager_private.h
provides:
  - name: power_manager_core_impl_sleep_loop
  - name: power_manager_core_impl
    condition: [device_series_2]
  - name: power_manager_core_impl
    condition: [device_generic_family_sixx301]
requires:
  - name: emlib_cmu
    condition: [device_series_2]
  - name: emlib_emu
    condition: [device_series_2]
  - name: emlib_iadc
    condition: [device_sdid_205]
  - name: udelay
  - name: clock_manager_runtime
    condition: [device_generic_family_sixx301]
recommends:
  - id: power_manager_deepsleep
    condition: [device_series_2, device_has_sysrtc]
  - id: power_manager_no_deepsleep
    condition: [device_generic_family_sixx301]
  - id: power_manager_deepsleep_blocking_hfxo_restore
    condition: [device_series_2, device_has_rtcc]

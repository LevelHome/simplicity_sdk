id: power_manager_core
label: "Power Manager: Core"
package: platform
description: Power Manager core (no handler generation)
category: Services|Power Manager
quality: production
metadata:
  sbom:
    license: Zlib
ui_hints:
  visibility: never
root_path: platform/service/power_manager/
include:
  - path: inc
    file_list:
      - path: sl_power_manager.h
      - path: sl_power_manager_debug.h
      - path: sli_power_manager.h
      - path: sl_power_manager_execution_modes.h
        condition: [device_series_3]
source:
  - path: src/common/sl_power_manager_common.c
  - path: src/common/sl_power_manager_em4.c
  - path: src/common/sli_power_manager_execution_modes_private.h
    condition: [device_series_3]
  - path: src/common/sl_power_manager_execution_modes.c
    condition: [device_series_3]
  - path: src/common/sl_power_manager_execution_modes_hal_sixg301.c
    condition: [device_generic_family_sixx301]
provides:
  - name: power_manager_core
  - name: device_init_emu
requires:
  - name: power_manager_core_impl
  - name: sl_core
  - name: sl_assert
  - name: status
  - name: slist
  - name: atomic
  - name: enum
  - name: sleeptimer
  - name: power_manager_energy_mode_impl
  - name: code_classification
template_contribution:
  - name: event_handler
    value:
      event: platform_init
      include: sl_power_manager.h
      handler: sl_power_manager_init
    priority: 10000
  - name: component_catalog
    value: power_manager
  - name: code_classification_components
    value: power_manager
define:
  - name: SL_CODE_COMPONENT_POWER_MANAGER
    value: power_manager

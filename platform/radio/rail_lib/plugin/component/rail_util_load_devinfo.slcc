id: rail_util_load_devinfo
label: RAIL Utility, Load Devinfo
description: Utility to aid with copying DEVINFO register values onto RAM
package: platform
category: Platform|Radio
quality: production
metadata:
  sbom:
    id: rail_util_load_devinfo
    name: RAIL Utility, Load Devinfo
    license: Zlib
requires:
  - name: rail_lib
provides:
  - name: rail_util_load_devinfo
include:
  - path: platform/radio/rail_lib/plugin/rail_utiL_load_devinfo
    file_list:
      - path: sl_rail_util_load_devinfo.h
source:
  - path: platform/radio/rail_lib/plugin/rail_utiL_load_devinfo/sl_rail_util_load_devinfo.c
template_contribution:
  - name: event_handler
    value:
      event: stack_init
      include: sl_rail_util_load_devinfo.h
      handler: sl_rail_util_load_devinfo
    priority: -9010 # Must be called before sl_rail_util_init
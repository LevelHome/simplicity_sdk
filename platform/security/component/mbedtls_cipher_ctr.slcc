template_contribution:
  - name: mbedtls_config
    value: MBEDTLS_CIPHER_MODE_CTR
metadata:
  sbom:
    license: Apache-2.0
    upstream:
      name: Mbed TLS
      version: v3.6.2
      supplier: Trusted Firmware

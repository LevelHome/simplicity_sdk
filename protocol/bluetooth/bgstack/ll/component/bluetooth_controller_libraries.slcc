id: bluetooth_controller_libraries
label: Bluetooth Low Energy Controller Library
ui_hints:
  visibility: never
package: Bluetooth
description: |-
  BLE controller libraries to be used by a Bluetooth stack

category: Bluetooth|Bluetooth LE Controller (Link Layer)
quality: production
root_path: protocol/bluetooth/bgstack/ll
provides:
  - name: bluetooth_controller_libraries
requires:
  - name: bluetooth_common_release
  - name: bluetooth_controller_crypto
  - name: device_supports_bluetooth
  - name: emlib_system
    condition:
      - device_series_2
  - name: hal_system
    condition:
      - device_series_3
  - name: rail_lib
  - name: rail_util_pa
  - name: rail_util_built_in_phys
  - name: sli_crypto

library:
  - path: build/gcc/x301/release/liblinklayer.a
    condition:
      - toolchain_gcc
      - device_generic_family_sixx301
  - path: build/gcc/xg21/release/liblinklayer.a
    condition:
      - toolchain_gcc
      - device_generic_family_efr32xg21
  - path: build/gcc/xg22/release/liblinklayer.a
    condition:
      - toolchain_gcc
      - device_generic_family_efr32xg22
  - path: build/gcc/xg24/release/liblinklayer.a
    condition:

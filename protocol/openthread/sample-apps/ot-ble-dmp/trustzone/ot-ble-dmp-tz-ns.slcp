project_name: ot-ble-dmp-tz-ns
label: OpenThread BLE DMP - SoC FreeRTOS (TrustZone)
package: OpenThread
description: >
    This is a variant of the OpenThread BLE DMP application with trustzone awareness enabled.
category: OpenThread Examples
quality: production

component:
  - id: ot_stack_ftd
  - id: ot_cli_source
  - id: bluetooth_stack
  - id: gatt_configuration
  - id: bluetooth_feature_system
  - id: bluetooth_feature_gap

  # Use legacy scanner to only scan advertisements that use legacy advertising
  # PDUs. Include bluetooth_feature_extended_scanner if scanning extended
  # advertising PDUs is also required. That component is not included currently
  # for minimizing the application size.
  - id: "bluetooth_feature_legacy_scanner"

  - id: bluetooth_feature_legacy_advertiser
  - id: bluetooth_feature_connection
  - id: bluetooth_feature_gatt
  - id: bluetooth_feature_gatt_server
  - id: bluetooth_feature_nvm
  - id: bluetooth_feature_sm
  - id: freertos
  - id: freertos_heap_3
  - id: rail_lib_multiprotocol
  - id: nvm3_lib
  - id: simple_button
    instance:
      - btn0
      - btn1
  - id: iostream_recommended_console
  - id: rail_util_pti
  - id: bootloader_interface
  - id: clock_manager
  - id: trustzone_nonsecure
  - id: tz_secure_key_library

include:
  - path: ../
    file_list:
    - path: app.h
  - path: ../../../../../util/third_party/openthread/src/lib/platform
    file_list:
    - path: reset_util.h

source:
  - path: ../main.c
  - path: ../app.c
  - path: ../bluetooth_event_callback.c

configuration:
  - name: SL_BOARD_ENABLE_VCOM
    value: 1
  - name: SL_MBEDTLS_KEY_EXCHANGE_ECDHE_ECDSA_ENABLED
    value: 1
  - name: SL_MBEDTLS_KEY_EXCHANGE_PSK_ENABLED
    value: 1
  - name: SL_HEAP_SIZE
    value: 16384
    condition: [freertos]
  - name: SL_STACK_SIZE
    value: 4608
  - name: OPENTHREAD_CONFIG_TMF_NETDIAG_CLIENT_ENABLE
    value: 0
  - name: CIRCULAR_QUEUE_LEN_MAX
    value: 16
  # RTT logging configuration
  - name: OPENTHREAD_CONFIG_LOG_OUTPUT
    value: OPENTHREAD_CONFIG_LOG_OUTPUT_PLATFORM_DEFINED
    condition: [ot_rtt_log]
  - name: BUFFER_SIZE_UP
    value: 768
    condition: [ot_rtt_log]
  - name: BUFFER_SIZE_DOWN
    value: 0
    condition: [ot_rtt_log]
  # Serial configuration
  - name: SL_IOSTREAM_USART_VCOM_FLOW_CONTROL_TYPE
    value: usartHwFlowControlCtsAndRts
    condition: [iostream_usart]
  - name: SL_IOSTREAM_EUSART_VCOM_FLOW_CONTROL_TYPE
    value: SL_IOSTREAM_EUSART_UART_FLOW_CTRL_CTS_RTS
    condition: [iostream_eusart]
  - name: SL_IOSTREAM_USART_VCOM_RX_BUFFER_SIZE
    value: 128 # Increase from default 32
    condition: [iostream_usart]
  - name: SL_IOSTREAM_EUSART_VCOM_RX_BUFFER_SIZE
    value: 128 # Increase from default 32
    condition: [iostream_eusart]
  # FreeRTOS configuration
  - name: configRUN_FREERTOS_SECURE_ONLY
    value: 0
  - name: configENABLE_TRUSTZONE
    value: 0
  - name: configTIMER_TASK_PRIORITY
    value: 53

template_contribution:
  - name: memory_flash_start
    value: 0x1E000
    condition: [device_sdid_200]
    unless: [bootloader_interface]
  - name: memory_flash_start
    value: 0x0801E000
    unless: [device_sdid_200, bootloader_interface]
  - name: memory_flash_start
    value: 0x22000
    condition: [device_sdid_200, bootloader_interface]
  - name: memory_flash_start
    value: 0x08024000
    condition: [bootloader_interface]
    unless: [device_sdid_200]

  - name: memory_flash_size
    value: 0x98000   # should be less or equal to FLASH_SIZE minus memory_flash_start

  - name: memory_ram_start
    value: 0x20003000

  - name: memory_ram_size
    value: 0x15000

import:
  # Import the config files from the TZ Secure application
  - id: ot-tz-secure-application

post_build:
  profile: tz_nonsecure_application

tag:
  - companion:secure_app
  - hardware:device:flash:768

readme:
  - path: ../README.md
  - path: README.md

filter:
  - name: "Wireless Technology"
    value: ["Thread", "Bluetooth"]
  - name: "Device Type"
    value: ["SoC"]
  - name: "Capability"
    value: ["Multiprotocol"]
  - name: "Project Difficulty"
    value: ["Advanced"]

ui_hints:
  highlight:
    - path: ../README.md
    - path: README.md
      focus: true

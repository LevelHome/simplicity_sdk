id: ddp_rtt
label: DDP RTT interface
description: |
  This component provides a Dynamic Data Provisioning (DDP) command interface
  via SEGGER RTT.
package: wisun
category: Wi-SUN
quality: evaluation
metadata:
  sbom:
    license: MSLA
ui_hints:
  visibility: never
root_path: protocol/wisun/ddp
provides:
  - name: ddp_rtt
requires:
  - name: ddp_common
  - name: iostream_rtt
  - name: sl_system
include:
  - path: inc
    file_list:
      - path: sl_ddp_rtt.h
source:
  - path: src/sl_ddp_rtt.c
config_file:
  - path: config/sl_ddp_rtt_config.h
template_contribution:
  - name: event_handler
    value:
      event: internal_app_init
      include: sl_ddp_rtt.h
      handler: sl_ddp_rtt_init
  - name: event_handler
    value:
      event: internal_app_process_action
      include: sl_ddp_rtt.h
      handler: sl_ddp_rtt_process_action
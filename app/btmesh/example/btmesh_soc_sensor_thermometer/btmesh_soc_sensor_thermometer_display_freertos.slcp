project_name: btmesh_soc_sensor_thermometer_freertos
package: Btmesh
label: Bluetooth Mesh - SoC Sensor Thermometer FreeRTOS
description: >
  This example demonstrates the Bluetooth Mesh Sensor Server Model and Sensor
  Setup Server Model. It measures temperature and sends the measurement data
  to a remote device (e.g., btmesh_soc_sensor_client). This example runs on top 
  of FreeRTOS.

category: Bluetooth Mesh Examples
quality: production

filter:
  - name: "Wireless Technology"
    value: ["Bluetooth Mesh"]
  - name: "Device Type"
    value: ["SoC"]
  - name: "Project Difficulty"
    value: ["Advanced"]

component:
  - id: app_assert
  - id: app_log
  - id: app_timer
  - id: bootloader_interface
  - id: app_button_press
  - id: bt_post_build
  - id: btmesh_factory_reset
  - id: btmesh_lpn
  - id: btmesh_stack_gatt_prov_bearer
  - id: btmesh_stack_relay
  - id: btmesh_provisionee
  - id: btmesh_provisioning_decorator
  - id: btmesh_proxy
  - id: btmesh_sensor_server
  - id: btmesh_iv_update
  - id: btmesh_wstk_lcd
  - id: cli
    instance:
    - example
  - id: clock_manager
  - id: device_init
  - id: freertos
  - id: gatt_service_device_information
  - id: i2cspm
    instance:
      - sensor
  - id: iostream_recommended_stream
  - id: mpu
  - id: rail_util_pti
  - id: sensor_rht
  - id: simple_button_recommended_instance
  - id: simple_led_recommended_instance
  - id: sl_system
  - id: udelay

source:
  - path: app.c
  - path: app_freertos.c
  - path: app_out_lcd.c
  - path: local_cli_commands.c
  - path: main.c

include:
  - path: .
    file_list:
    - path: app.h

config_file:
  - override:
      component: gatt_configuration
      file_id: gatt_configuration_file_id
    path: gatt_configuration.btconf
    directory: btconf
  - override:
      component: btmesh_dcd_configuration
      file_id: dcd_configuration_file_id
    path: dcd_config.btmeshconf
    directory: btmeshconf

readme:
  - path: ../../documentation/example/btmesh_soc_sensor_thermometer/readme_freertos.md

other_file:
  - path: ../../documentation/example/btmesh_soc_sensor_thermometer/readme_img0.png
  - path: ../../documentation/example/btmesh_soc_sensor_thermometer/readme_img1.png
  - path: ../../documentation/example/btmesh_soc_sensor_thermometer/readme_img2.png
  - path: ../../documentation/example/btmesh_soc_sensor_thermometer/readme_img3.png
  - path: ../../documentation/example/btmesh_soc_sensor_thermometer/readme_img4.png
  - path: ../../documentation/example/btmesh_soc_sensor_thermometer/readme_img5.png
  - path: ../../documentation/example/btmesh_soc_sensor_thermometer/readme_img6.png
  - path: ../../documentation/example/btmesh_soc_sensor_thermometer/readme_img7.png
  - path: ../../documentation/example/btmesh_soc_sensor_thermometer/readme_img8.png

configuration:
  - name: EMDRV_DMADRV_DMA_CH_COUNT
    value: 1
  - name: APP_LOG_LEVEL
    value: "APP_LOG_LEVEL_INFO"
  - name: APP_BUTTON_PRESS_CONFIG_QUEUE_SIZE
    value: "4"
  - name: configTIMER_TASK_STACK_DEPTH
    value: "240"
  - name: NVM3_DEFAULT_CACHE_SIZE
    value: 100
  - name: NVM3_DEFAULT_NVM_SIZE
    value: "0x6000"
  - name: SL_BT_RTOS_HOST_STACK_TASK_STACK_SIZE
    value: "4000"
  - name: SL_BOARD_ENABLE_DISPLAY
    value: "1"
  - name: SL_BOARD_ENABLE_SENSOR_RHT
    value: "1"
    condition:
      - si70xx_driver
      - i2cspm
  - name: SL_BOARD_ENABLE_VCOM
    value: "1"
  - name: SL_BTMESH_PROVISIONEE_AUTO_RESET_DELAY
    value: "1"
  - name: SL_BTMESH_CONFIG_MAX_PROV_BEARERS
    value: "3"
  - name: SL_GLIB_FONTNORMAL_8X8
    value: 0
  - name: SL_PSA_KEY_USER_SLOT_COUNT
    value: "0"
    condition:
      - psa_crypto
  - name: SL_SIMPLE_BUTTON_ALLOW_LED_CONFLICT
    value: "1"

template_contribution:
  - name: cli_command
    value:
      name: info
      handler: info
      help: "Prints info about BT address and mesh UUID"
    condition:
      - cli

tag:
  - hardware:device:sdid:!205
  - hardware:board_only
  - hardware:component:button:2+
  - hardware:component:display:ls013b7dh03
  - hardware:component:led:2+
  - hardware:component:sensor:!si1133
  - hardware:component:sensor:si7021
  - hardware:device:flash:512
  - hardware:device:ram:64
  - hardware:rf:band:2400

ui_hints:
  highlight:
    - path: config/btconf/gatt_configuration.btconf
      focus: false
    - path: config/btmeshconf/dcd_config.btmeshconf
      focus: false
    - path: readme_freertos.md
      focus: true
id: "sl_wisun_tcp_server"
label: "Wi-SUN TCP Server"
package: "wisun"
description: >
  This component contains functions of Wi-SUN TCP Server apps and the TCP Server configuration.
  The listener port and the receive buffer size can be configured.
category: "Wi-SUN|Wi-SUN Services"
quality: "production"
metadata:
  sbom:
    license: Zlib
root_path: "app/wisun/component/tcp_server"
provides:
  - name: sl_wisun_tcp_server

source:
  - path: "sl_wisun_tcp_server.c"

include:
  - path: "."
    file_list:
    - path: "sl_wisun_tcp_server.h"

config_file:
  - path: "config/sl_wisun_tcp_server_config.h"

requires:
  - name: "sl_wisun_app_core"

ui_hints:
  visibility: never
#-------------- Template Contribution ----------------
template_contribution:
  - name: "event_handler"
    value:
      event: "internal_app_init"
      include: "sl_wisun_tcp_server.h"
      handler: "sl_wisun_tcp_server_init"
#---------------- Component Catalog ------------------
  - name: component_catalog
    value: wisun_tcp_server

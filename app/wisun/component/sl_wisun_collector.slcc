id: "sl_wisun_collector"
label: "Wi-SUN Collector"
package: "wisun"
description: >
  This component contains the common source of Wi-SUN Collector applications.
  The component provides the CoAP sources as well for Wi-SUN - SoC CoAP
  Collector app.
  There is an additional config file for CoAP collector too, according to the
  required CoAP component, it is included also.
category: "Wi-SUN|Wi-SUN Services"
quality: "production"
metadata:
  sbom:
    license: Zlib
root_path: "app/wisun/component/meter_collector_common"
provides:
  - name: sl_wisun_collector

source:
  - path: "sli_wisun_meter_collector.c"
  - path: "sl_wisun_coap_collector.c"
    condition:
      - "sl_wisun_coap"
  - path: "sl_wisun_collector.c"
    unless:
      - "sl_wisun_coap"

include:
  - path: "."
    file_list:
    - path: "sli_wisun_meter_collector.h"
    - path: "sl_wisun_coap_collector.h"
      condition:
        - "sl_wisun_coap"
    - path: "sl_wisun_collector.h"
      unless:
        - "sl_wisun_coap"

config_file:
  - path: "config/sl_wisun_meter_collector_config.h"

requires:
  - name: "sl_wisun_app_core"
  - name: "sl_mempool"
  - name: "sl_wisun_led_driver"
    condition:
      - "sl_wisun_coap"

ui_hints:
  visibility: never

#-------------- Template Contribution ----------------
template_contribution:
#---------------- Component Catalog ------------------
  - name: component_catalog
    value: wisun_collector

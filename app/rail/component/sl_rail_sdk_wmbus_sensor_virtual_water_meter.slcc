id: "sl_rail_sdk_wmbus_sensor_virtual_water_meter"
label: "Wireless M-Bus Virtual Water Meter Sensor (Wireless M-Bus Meter Only)"
package: "Rail"
description: "Software-based solution designed to monitor and measure the water meter in a given environment."
category: "RAIL-SDK|Wireless M-Bus"
quality: "production"
metadata:
  sbom:
    license: Zlib
root_path: "app/rail/component/sl_rail_sdk_wmbus_sensor_virtual_water_meter"

provides:
  - name: sl_rail_sdk_wmbus_sensor_virtual_water_meter

config_file:
  - path: config/sl_rail_sdk_wmbus_sensor_virtual_water_meter_config.h

requires:
  - name: "sl_rail_sdk_wmbus_sensor_core"
  - name: "sl_rail_sdk_wmbus_packet_assembler"
  - name: "segment_lcd_driver"
    condition:
      - "hardware_board_has_segment_lcd"
  - name: "sleeptimer"
  - name: "app_assert"

source:
  - path: "sl_rail_sdk_wmbus_sensor_virtual_water_meter.c"
include:
  - path: "."
    file_list:
    - "path": "sl_rail_sdk_wmbus_sensor_virtual_water_meter.h"

#-------------- Template Contribution ----------------
template_contribution:
#------------------ Water meter ---------------------
  - name: event_handler
    value:
      event: internal_app_init
      include: "sl_rail_sdk_wmbus_sensor_virtual_water_meter.h"
      handler: "sl_rail_sdk_wmbus_sensor_virtual_water_meter_init"
    priority: 9000
#---------------- Component Catalog ------------------
  - name: component_catalog
    value: wmbus_sensor_virtual_water_meter

id: "sl_rail_sdk_simple_os"
label: "Simple OS Init files for RAIL Sample Apps"
package: "Rail"
description: "Adds task init function for RAIL Sample Apps. Compatible with Micrium and with FreeRTOS."
category: "RAIL-SDK|Extension"
quality: "production"
metadata:
  sbom:
    license: Zlib
root_path: "app/rail/component/sl_rail_sdk_simple_os"
provides:
  - name: sl_rail_sdk_simple_os

requires:
  - name: sleeptimer
  - name: segger_systemview
    condition:
      - "micriumos"
      - "device_series_2"
  - name: kernel
  - name: device_has_radio

source:
  - path: "freertos/app_task_init.c"
    condition:
      - "freertos"
  - path: "micrium/app_task_init.c"
    condition:
      - "micriumos"
include:
  - path: "."
    file_list:
    - "path": "app_task_init.h"

#-------------- Template Contribution ----------------
template_contribution:
#---------------- Component Catalog ------------------
  - name: component_catalog
    value: sl_rail_sdk_simple_os

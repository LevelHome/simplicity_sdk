id: "sl_rail_sdk_wmbus_sensor_thermometer"
label: "Wireless M-Bus Thermometer Sensor (Wireless M-Bus Meter Only)"
package: "Rail"
description: "Monitor and measure temperature with thermometer sensor."
category: "RAIL-SDK|Wireless M-Bus"
quality: "production"
metadata:
  sbom:
    license: Zlib
root_path: "app/rail/component/sl_rail_sdk_wmbus_sensor_thermometer"

provides:
  - name: sl_rail_sdk_wmbus_sensor_thermometer

config_file:
  - path: config/sl_rail_sdk_wmbus_sensor_thermometer_config.h

requires:
  - name: "sl_rail_sdk_wmbus_sensor_core"
  - name: "sl_rail_sdk_wmbus_packet_assembler"
  - name: "segment_lcd_driver"
    condition:
      - "hardware_board_has_segment_lcd"
  - name: "hardware_board_has_si70xx"
  - name: "sleeptimer"
  - name: "app_assert"
  - name: "si70xx_driver"
    condition:
      - "hardware_board_has_si70xx"

source:
  - path: "sl_rail_sdk_wmbus_sensor_thermometer.c"
include:
  - path: "."
    file_list:
    - "path": "sl_rail_sdk_wmbus_sensor_thermometer.h"

#-------------- Template Contribution ----------------
template_contribution:
#------------------ Thermometer ---------------------
  - name: event_handler
    value:
      event: internal_app_init
      include: "sl_rail_sdk_wmbus_sensor_thermometer.h"
      handler: "sl_rail_sdk_wmbus_sensor_thermometer_init"
    priority: 9000
#---------------- Component Catalog ------------------
  - name: component_catalog
    value: wmbus_sensor_thermometer

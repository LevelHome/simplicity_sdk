id: cbap
label: Certificate Based Authentication and Pairing
package: Bluetooth
description: >
  Handles the certificate and OOB data authentication.
category: Bluetooth|Application|Miscellaneous
metadata:
  sbom:
    license: Zlib
quality: experimental
root_path: app/bluetooth/common/cbap
include:
  - path: .
    file_list:
      - path: sl_bt_cbap.h
config_file:
  - path: config/sl_bt_cbap_root_cert.h
    file_id: cbap_root_certificate
source:
  - path: sl_bt_cbap.c
requires:
  - name: nvm3_lib
  - name: nvm3_default
  - name: mbedtls_asn1
  - name: mbedtls_core
  - name: mbedtls_pem
  - name: mbedtls_x509
  - name: psa_crypto
  - name: psa_crypto_cmac
  - name: psa_crypto_ccm
  - name: psa_crypto_cipher_ecb
  - name: psa_crypto_ecdh
  - name: psa_crypto_ecdsa
  - name: psa_crypto_ecc_secp256r1
  - name: psa_its
  - name: psa_crypto_hmac
  - name: psa_crypto_sha256
  - name: psa_crypto_sha1
provides:
  - name: cbap

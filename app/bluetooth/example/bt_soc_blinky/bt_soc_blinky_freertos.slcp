project_name: bt_soc_blinky_freertos
package: Bluetooth
label: Bluetooth - SoC Blinky FreeRTOS
description: >
  The classic blinky example using Bluetooth communication. Demonstrates a
  simple two-way data exchange over GATT. This can be tested with the
  Simplicity Connect mobile app.
category: Bluetooth Examples
quality: experimental

filter:
  - name: "Wireless Technology"
    value: ["Bluetooth"]
  - name: "Device Type"
    value: ["SoC"]
  - name: "Project Difficulty"
    value: ["Beginner"]

component:
  - id: freertos
  - id: bluetooth_stack
  - id: gatt_configuration
  - id: gatt_service_device_information
  - id: bluetooth_feature_legacy_advertiser
  - id: bluetooth_feature_connection
  - id: bluetooth_feature_gatt_server
  - id: bluetooth_feature_system
  - id: in_place_ota_dfu
    condition:
      - device_series_2
  - id: bootloader_interface
    condition:
      - device_series_2
  - id: rail_util_pti
  - id: app_assert
  - id: mpu
  - id: simple_button
    instance:
      - btn0
  - id: simple_led
    instance:
      - led0
  - id: app_log
  - id: sl_system
  - id: clock_manager
  - id: device_init
  - id: sl_common

source:
  - path: main.c
  - path: app.c
  - path: app_freertos.c

include:
  - path: .
    file_list:
      - path: app.h

config_file:
  - override:
      component: gatt_configuration
      file_id: gatt_configuration_file_id
    path: gatt_configuration.btconf
    directory: btconf

readme:
  - path: readme.md

other_file:
  - path: image/readme_img0.png
  - path: image/readme_img1.jpg
  - path: image/readme_img2.jpg
  - path: image/readme_img3.jpg
  - path: image/readme_img4.jpg
  - path: image/readme_img5.gif

configuration:
  - name: SL_STACK_SIZE
    value: "2000"
  - name: configTOTAL_HEAP_SIZE
    value: "5000"
  - name: configTIMER_TASK_STACK_DEPTH
    value: "240"
  - name: SL_BOARD_ENABLE_VCOM
    value: "1"
  - name: SL_IOSTREAM_USART_VCOM_RESTRICT_ENERGY_MODE_TO_ALLOW_RECEPTION
    value: "0"
  - name: SL_IOSTREAM_EUSART_VCOM_RESTRICT_ENERGY_MODE_TO_ALLOW_RECEPTION
    value: "0"
  - name: SL_PSA_KEY_USER_SLOT_COUNT
    value: "0"
    condition:
      - psa_crypto

post_build:
  - profile: bt_common
    condition: [device_series_2, bootloader_app_properties]

tag:
  - hardware:rf:band:2400
  - hardware:component:button:1+
  - hardware:component:led:1+
  - hardware:!shared:button:led

ui_hints:
  highlight:
    - path: config/btconf/gatt_configuration.btconf
    - path: readme.md
      focus: true

project_name: bt_rcp_freertos
package: Bluetooth
label: Bluetooth - RCP FreeRTOS
description: >
  Radio Co-Processor (RCP) target application. Runs the Bluetooth Controller
  (i.e. the Link Layer only) and provides access to it using the standard HCI
  (Host-Controller Interface) over a UART connection.
category: Bluetooth Examples
quality: experimental

filter:
  - name: "Wireless Technology"
    value: ["Bluetooth"]
  - name: "Device Type"
    value: ["RCP"]
  - name: "Project Difficulty"
    value: ["Advanced"]

component:
  - id: freertos
  - id: bluetooth_hci
  - id: bluetooth_hci_uart
    condition:
      - device_series_2
  - id: uartdrv_usart
    instance:
      - vcom
    condition:
      - device_series_2
  - id: bluetooth_hci_iostream_uart
    condition:
      - device_series_3
  - id: iostream_eusart
    instance:
      - vcom
    condition:
      - device_series_3
  - id: board_control
  - id: bluetooth_controller
  - id: bluetooth_feature_connection
  - id: bluetooth_feature_legacy_advertiser
  - id: bluetooth_feature_extended_advertiser
  - id: bluetooth_feature_periodic_advertiser
  - id: bluetooth_feature_connection_phy_update
  - id: bluetooth_feature_legacy_scanner
  - id: bluetooth_feature_extended_scanner
  - id: bootloader_interface
    condition:
      - device_series_2
  - id: app_assert
  - id: sl_system
  - id: clock_manager
  - id: device_init
  - id: sl_common

source:
  - path: main.c
  - path: app.c
  - path: app_freertos.c

include:
  - path: .
    file_list:
      - path: app.h

readme:
  - path: readme.md

other_file:
  - path: image/readme_img0.png
  - path: image/readme_img1.png
  - path: image/readme_img2.png
  - path: image/readme_img3.png
  - path: image/readme_img4.png

configuration:
  - name: SL_STACK_SIZE
    value: "2000"
  - name: configTOTAL_HEAP_SIZE
    value: "7000"
  - name: configTIMER_TASK_STACK_DEPTH
    value: "240"
  - name: SL_BT_CONTROLLER_BUFFER_MEMORY
    value: 7168
  - name: SL_BT_CONFIG_USER_ADVERTISERS
    value: 2
  - name: SL_BOARD_ENABLE_VCOM
    value: 1
  - name: SL_UARTDRV_USART_VCOM_FLOW_CONTROL_TYPE
    value: uartdrvFlowControlHwUart
  - name: SL_IOSTREAM_EUSART_VCOM_FLOW_CONTROL_TYPE
    value: SL_IOSTREAM_EUSART_UART_FLOW_CTRL_SOFT
  - name: SL_PSA_KEY_USER_SLOT_COUNT
    value: "0"
    condition:
      - psa_crypto

tag:
  - hardware:rf:band:2400

ui_hints:
  highlight:
    - path: readme.md
      focus: true

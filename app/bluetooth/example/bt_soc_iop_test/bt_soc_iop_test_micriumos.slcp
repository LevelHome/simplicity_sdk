---
project_name: bt_soc_iop_test_micriumos
package: Bluetooth
label: Bluetooth - SoC Interoperability Test Micrium OS
description: >
  This is a test procedure containing several test cases for Bluetooth Low
  Energy communication. This demo is meant to be used with the Simplicity
  Connect mobile app, through the "Interoperability Test" tile on the Develop 
  view of the app.
category: Bluetooth Examples
quality: experimental

filter:
  - name: "Wireless Technology"
    value: ["Bluetooth"]
  - name: "Device Type"
    value: ["SoC"]
  - name: "Project Difficulty"
    value: ["Beginner"]

component:
  - id: micriumos_kernel
  - id: memory_manager
  - id: bluetooth_stack
  - id: gatt_configuration
  - id: gatt_service_device_information
  - id: bluetooth_feature_accept_list
  - id: bluetooth_feature_legacy_advertiser
  - id: bluetooth_feature_connection
  - id: bluetooth_feature_gatt_server
  - id: bluetooth_feature_resolving_list
  - id: bluetooth_feature_sm
  - id: bluetooth_feature_system
  - id: component_catalog
  - id: in_place_ota_dfu
    condition: [device_series_2]
  - id: bootloader_interface
    condition: [device_series_2]
  - id: rail_util_pti
  - id: app_assert
  - id: mpu
  - id: app_timer
  - id: app_log
  - id: dmd_memlcd
    condition: [hardware_board_supports_wstk_lcd]
  - id: glib
    condition: [hardware_board_supports_wstk_lcd]
  - id: bt_iop_post_build
    condition: [device_series_2]
  - id: sl_system
  - id: clock_manager
  - id: device_init

source:
  - path: main.c
  - path: app_micriumos.c
  - path: app.c
  - path: app_iop.c
  - path: app_memlcd.c
    condition: [hardware_board_supports_wstk_lcd]

include:
  - path: .
    file_list:
      - path: app.h
      - path: app_iop.h
      - path: app_memlcd.h

config_file:
  - override:
      component: gatt_configuration
      file_id: gatt_configuration_file_id
    path: gatt_configuration.btconf
    directory: btconf

readme:
  - path: readme.md

other_file:
  - path: image/readme_img0.png
  - path: image/readme_img1.png
  - path: image/readme_img2a.png
  - path: image/readme_img2b.png
  - path: image/readme_img3a.png
  - path: image/readme_img3b.png
  - path: image/readme_img4.png
  - path: image/readme_img5.png
  - path: image/readme_img6.png
  - path: image/readme_img7.png
  - path: image/readme_img8.png
  - path: image/readme_img9.png
  - path: image/readme_img10.png
  - path: image/readme_img11a.png
  - path: image/readme_img11b.png

configuration:
  - name: SL_BT_IN_PLACE_OTA_DFU_MIN_DELAY_TO_DISCONNECT
    value: "2000"
  - name: SL_STACK_SIZE
    value: "2000"
  - name: LIB_MEM_CFG_HEAP_SIZE
    value: "6500"
  - name: OS_CFG_TMR_EN
    value: "1"
  - name: OS_CFG_DBG_EN
    value: "0"
  - name: OS_CFG_TS_EN
    value: "0"
  - name: OS_CFG_SCHED_ROUND_ROBIN_EN
    value: "0"
  - name: OS_CFG_STK_SIZE_MIN
    value: "48"
  - name: OS_CFG_Q_EN
    value: "1"
  - name: OS_CFG_MON_EN
    value: "0"
  - name: OS_CFG_STAT_TASK_EN
    value: "0"
  - name: OS_CFG_STAT_TASK_STK_CHK_EN
    value: "0"
  - name: OS_CFG_TASK_PROFILE_EN
    value: "0"
  - name: OS_CFG_TASK_Q_EN
    value: "0"
  - name: SL_BOARD_ENABLE_VCOM
    value: "1"
  - name: SL_IOSTREAM_USART_VCOM_RESTRICT_ENERGY_MODE_TO_ALLOW_RECEPTION
    value: "0"
  - name: SL_IOSTREAM_EUSART_VCOM_RESTRICT_ENERGY_MODE_TO_ALLOW_RECEPTION
    value: "0"
  - name: SL_BOARD_ENABLE_DISPLAY
    value: "1"
    condition: [hardware_board_supports_wstk_lcd]
  - name: SL_PSA_KEY_USER_SLOT_COUNT
    value: "0"
    condition:
      - psa_crypto

define:
  - name: BOARD_MEMLCD_PRESENT
    condition: [hardware_board_supports_wstk_lcd]

tag:
  - hardware:rf:band:2400

ui_hints:
  highlight:
    - path: config/btconf/gatt_configuration.btconf
    - path: readme.md
      focus: true

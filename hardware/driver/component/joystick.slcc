id: joystick
label: Joystick
package: platform
description: >
  The Joystick Driver provides an implementation of the Analog Joystick API.

  This driver supports the Joystick Hardware present on Wireless Pro Kit (BRD4002A)

category: Platform|Board Drivers
quality: production
metadata:
  sbom:
    license: Zlib
root_path: hardware/driver/joystick/
source:
  - path: src/sl_joystick.c
include:
  - path: inc
    file_list:
      - path: sl_joystick.h
config_file:
  - path: "config/s2/sl_joystick_config.h"
    file_id: joystick_config
    condition: [device_series_2]
  - path: "config/s3/sl_joystick_config.h"
    file_id: joystick_config
    condition: [device_series_3]
provides:
  - name: joystick
    allow_multiple: false
requires:
  - name: gpio
  - name: hal_generic_adc
  - name: hal_generic_common
  - name: clock_manager_runtime
  - name: status
  - name: component_catalog
template_contribution:
  - name: component_catalog
    value: joystick
